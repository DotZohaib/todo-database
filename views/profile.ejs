<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <script src="https://cdn.lordicon.com/lordicon.js"></script>
    <script src="https://cdn.lordicon.com/lordicon.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
    }

    html,
    body {
        width: 100vw;
        height: 100vh;
    }

    #contain {
        background-color: aqua;
        display: flex;
        height: 60px;
        text-align: center;
        align-items: center;
        justify-content: space-between;
    }

    #contain nav ul {
        list-style: none;
        display: flex;
        gap: 30px;
        text-align: center;
        align-items: center;
    }

    nav ul li a {
        text-decoration: none;
    }

    nav ul li a:hover {
        text-decoration: underline;
    }

    @media only screen and (max-width: 420px) {
        #contain {
            display: none;
            left: 0px;
            top: 0%;
            position: absolute;
        }
    }

    #container {
        background-color: cadetblue;
        height: 50px;
        align-items: center;
        display: flex;
        text-align: center;
        justify-content: space-between;
        width: 100vw;
    }

    @media only screen and (min-width: 420px) {
        #container {
            display: none;
            left: 0px;
            top: 0%;
            position: absolute;
        }
    }

    #home {
        display: flex;
        justify-content: flex-end;
    }

    #nav-bar {
        background-color: blue;
        height: 70vw;
        width: 50vw;
        display: flex;
        display: none;

    }

    #nav-bar li {
        list-style: none;
        color: rgb(255, 255, 255);
        margin-top: 15px;

    }
    #toast {
  position: fixed;
  bottom: 20px;
  left: 20px;
  background-color: #333;
  color: #fff;
  padding: 15px 20px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  z-index: 999;
  animation: slideIn 0.5s forwards, fadeOut 5s forwards, fadeBorder 5s forwards; /* Added fadeBorder animation */
}

.notification-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.hide {
  opacity: 0;
  transform: translateY(100%);
  pointer-events: none;
}

@keyframes slideIn {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes fadeOut {
  0% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes fadeBorder {
  0% {
    border-bottom: 3px solid red; /* Start with red bottom border */
  }
  100% {
    border-bottom: 3px solid rgba(255, 0, 0, 0); /* Fade to transparent bottom border */
  }
}




.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

/* Styles for confirmation box */
.confirmation-box {
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  width: 400px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.confirmation-box h1 {
  color: #ff0000;
}

.confirmation-box h2 {
  color: #333;
}

.confirmation-box p {
  color: #666;
  margin-bottom: 20px;
}

.confirmation-box button {
  background-color: #ff0000;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.confirmation-box button:hover {
  background-color: #e64a19;
}

/* Animation for showing the overlay */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Animation for hiding the overlay */
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

</style>

<body>
    <div id="contain">
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Apply</a></li>
                <li><a href="#">Addmission</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
        <div id="left-nav">
            <input type="search" name="search" id="search" placeholder="Searching...">
            <button type="submit">search</button>
        </div>
    </div>
    <div id="container">
        <h4><b>ZenZone</b></h4>
        <lord-icon id="icon" src="https://cdn.lordicon.com/biljllsy.json" trigger="hover"
            style="width:50px;height:50px">
        </lord-icon>
    </div>
    <div id="home">
        <div id="nav-bar">
            <ul>
                <h3>ZenZone</h3>
                <li><a href="#">Home</a></li>
                <li><a href="#">Home</a></li>
                <li><a href="#">Home</a></li>
                <li><a href="#">Home</a></li>
                <li><a href="#">Home</a></li>
            </ul>
        </div>
    </div>

    <div id="body">

        <!-- Order button -->
<button onclick="showConfirmation()">Order</button>

<!-- Overlay and confirmation box -->
<div class="overlay" id="overlay">
  <div class="confirmation-box">
    <h1><lord-icon
        src="https://cdn.lordicon.com/guqkthkk.json"
        trigger="hover"
        style="width:50px;height:50px">
    </lord-icon></h1>
    <h2>Your Order Confirmed!</h2>
    <p>Thank you for your purchase.</p>
    
    <button onclick="hideConfirmation()"><i style="font-size:24px" class="fa">&#xf00d;</i> </button>
  </div>
</div>

  <div id="toast" class="hide">
    <img  src="/images/png-transparent-15-off-sale-web-design-text-logo-removebg-preview.png" alt="Notification Icon" class="notification-icon">
    <div class="message">This is a toast notification!</div>
  </div>


  
    </div>

 
<script>
    function showConfirmation() {
      var overlay = document.getElementById('overlay');
      overlay.style.display = 'flex'; // Show the overlay
    }
    
    function hideConfirmation() {
      var overlay = document.getElementById('overlay');
      overlay.style.display = 'none'; // Hide the overlay
    }
    </script>
    <script>
        function showToast() {
            var toast = document.getElementById("toast");
            toast.classList.remove("hide");
            toast.classList.add("show");

            setTimeout(function () {
                toast.classList.remove("show");
                toast.classList.add("hide");
            }, 3000); // Change 3000 to desired duration in milliseconds
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        document.getElementById('icon').addEventListener('click', function () {
            var navBar = document.getElementById('nav-bar');
            if (navBar.style.display === 'block') {
                navBar.style.display = 'none';
            } else {
                navBar.style.display = 'block';
            }
        });

    </script>

</body>

</html>